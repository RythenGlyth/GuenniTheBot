<script>
    window.addEventListener("load", () => {
        socket.emit("ping-me", new Date().getTime());
    });
    socket.on("pong-me", (diff) => {
        if(parseInt(diff) > 500) {
            document.getElementById("ping-status").style.color = "#e74c3c";
        } else {
            document.getElementById("ping-status").style.color = "#2fcc66";
        }
        document.getElementById("ping-status").innerText = diff;
    })
